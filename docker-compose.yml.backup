version: '3.8'

services:
  web:
    build: .
    command: python manage.py runserver 0.0.0.0:8000
    volumes:
      - .:/app
    ports:
      - "8000:8000"
    environment:
    
      - DB_NAME=fin_db
      - DB_USER=fin_user
      - DB_PASS=fin_pass
      - DB_HOST=db
    depends_on:
      - db
      - redis
  
  beat:
    build: .
    command: celery -A config beat -l info
    volumes:
      - .:/app
    environment:
      - CELERY_BROKER_URL=redis://redis:6379/0
    depends_on:
      - redis
      - web
  
  worker:
    build: .
    command: celery -A config worker -l info
    volumes:
      - .:/app
    environment:
      - DB_NAME=fin_db
      - DB_USER=fin_user
      - DB_PASS=fin_pass
      - DB_HOST=db
      - CELERY_BROKER_URL=redis://redis:6379/0
    depends_on:
      - db
      - redis
      - web
  db:
    image: postgres:15-alpine
    volumes:
      - postgres_data:/var/lib/postgresql/data
    environment:
      - POSTGRES_DB=fin_db
      - POSTGRES_USER=fin_user
      - POSTGRES_PASSWORD=fin_pass

  redis:
    image: redis:7-alpine
    ports:
      - "6379:6379"

  flower:
    build: .
    command: celery -A config flower --port=5555
    ports:
      - "5555:5555"
    depends_on:
      - redis
      - worker

volumes:
  postgres_data:


